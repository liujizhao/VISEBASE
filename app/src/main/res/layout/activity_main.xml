<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_barriers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/login"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintTop_creator="0"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="10dp"
        tools:layout_constraintLeft_creator="0"
        tools:layout_constraintTop_creator="0" />

    <Button
        android:id="@+id/douBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:labelFor="@+id/settings"
        android:text="@string/douBan"
        android:visibility="visible"
        app:layout_constraintBaseline_creator="1"
        app:layout_constraintLeft_creator="1"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="60dp"
        tools:layout_constraintBaseline_creator="0"
        tools:layout_constraintLeft_creator="0" />

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:labelFor="@+id/cameraType"
        android:text="@string/upload"
        android:visibility="visible"
        app:layout_constraintBaseline_creator="1"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteY="110dp"
        tools:layout_constraintBaseline_creator="0"
        tools:layout_constraintLeft_creator="0" />

    <Button
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:labelFor="@+id/cameraType"
        android:text="@string/download"
        android:visibility="visible"
        app:layout_constraintBaseline_creator="1"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteY="110dp"
        tools:layout_constraintBaseline_creator="0"
        tools:layout_constraintLeft_creator="0" />


</LinearLayout>